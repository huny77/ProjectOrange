<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.keelim.orange.ui.home.HomeFragment"
        android:label="홈"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_feedFragment"
            app:destination="@id/feedFragment" />
        <action
            android:id="@+id/action_navigation_home_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_navigation_home_to_otherFragment"
            app:destination="@id/otherFragment" />
        <action
            android:id="@+id/action_navigation_home_to_rankingFragment"
            app:destination="@id/rankingFragment" />
        <action
            android:id="@+id/action_navigation_home_to_seasonFragment"
            app:destination="@id/seasonFragment" />
        <action
            android:id="@+id/action_navigation_home_to_notificationFragment"
            app:destination="@id/notificationFragment" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
        <action
            android:id="@+id/action_navigation_home_to_fightFragment"
            app:destination="@id/fightFragment" />
        <action
            android:id="@+id/action_navigation_home_to_createFragment2"
            app:destination="@id/createFragment2" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.keelim.orange.ui.dashboard.DashboardFragment"
        android:label="대시보드"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.keelim.orange.ui.noti.NotificationFragment"
        android:label="NotificationFragment" />
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.keelim.orange.ui.feed.FeedFragment"
        android:label="FeedFragment" >
        <action
            android:id="@+id/action_feedFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/fightFragment"
        android:name="com.keelim.orange.ui.fight.FightFragment"
        android:label="FightFragment" />
    <dialog
        android:id="@+id/otherFragment"
        android:name="com.keelim.orange.ui.fight.sheet.other.OtherFragment"
        android:label="OtherFragment" />
    <fragment
        android:id="@+id/rankingFragment"
        android:name="com.keelim.orange.ui.season.ranking.RankingFragment"
        android:label="RankingFragment" />
    <fragment
        android:id="@+id/seasonFragment"
        android:name="com.keelim.orange.ui.season.SeasonFragment"
        android:label="SeasonFragment" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.keelim.orange.ui.detail.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="uid"
            app:argType="string"
            android:defaultValue="0000" />
    </fragment>
    <dialog
        android:id="@+id/createFragment2"
        android:name="com.keelim.orange.ui.fight.sheet.create.CreateFragment"
        android:label="CreateFragment" />
</navigation>